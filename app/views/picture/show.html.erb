<%= raw "<img id=\"pic\" alt=\"This picture has expired.  Please ask the owner to provide you with a new link.\"src=\"/picture/#{@picture.uid}/raw\">" %>

<script>
    if (<%= @picture.viewable ? 1 : 0 %>) {
        document.addEventListener("contextmenu", function (e) {
            e.preventDefault();
        }, false);
        setTimeout(function () {
            location.reload();
        }, 20000);
    }
</script>